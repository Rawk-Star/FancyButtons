<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">

        <layer-list >

            <item>
                <shape android:shape="rectangle" >
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="270"
                        android:centerX="50%"
                        android:centerColor="#C1D3E8"
                        android:startColor="#584FA8"
                        android:endColor="#000000"
                        android:type="linear"
                        />
                    <size
                        android:width="250dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="3dp"
                        android:color="#ffffff"
                        />

                </shape>

            </item>

            <item android:left="20dp">
                <bitmap
                    android:gravity="center_vertical|left"
                    android:src="@android:drawable/btn_star_big_off" />
            </item>

            <item android:right="20dp">

                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@android:drawable/btn_star_big_off" />
            </item>

        </layer-list>

    </item>

    <item>

        <layer-list >

            <item>
                <shape android:shape="rectangle" >
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="270"
                        android:centerX="50%"
                        android:centerColor="#584FA8"
                        android:startColor="#E84D9F"
                        android:endColor="#000000"
                        android:type="linear"
                        />
                    <size
                        android:width="250dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="3dp"
                        android:color="#ffffff"
                        />

                </shape>

            </item>

            <item android:left="20dp">
                <bitmap
                    android:gravity="center_vertical|left"
                    android:src="@android:drawable/btn_star_big_on" />
            </item>

            <item android:right="20dp">

                <bitmap
                    android:gravity="center_vertical|right"
                    android:src="@android:drawable/btn_star_big_on" />
            </item>

        </layer-list>

    </item>

</selector>

