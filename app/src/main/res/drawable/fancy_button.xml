<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="50dp"
                />
            <solid
                android:color="#849CB8ff"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#ffffff"
                />
        </shape>
    </item>

    <item>
        <shape>
            <corners
                android:radius="50dp"
                />
            <gradient
                android:angle="270"
                android:centerX="50%"
                android:centerColor="#584FA8"
                android:startColor="#E84D9F"
                android:endColor="#000000"
                android:type="linear"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#ffffff"
                />
        </shape>
    </item>

</selector>


